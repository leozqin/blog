---
import HeaderMeta from "../components/HeaderMeta.astro";
import IndexIntro from "../components/IndexIntro.astro";
import BlogList from "../components/BlogList.astro";
import NavHeader from "../components/NavHeader.astro";
import IndexBadges from "../components/IndexBadges.astro";

const recentPostsCount = 4;
---

<html lang="en">
    <head>
        <title>Leo's Blog</title>
        <link rel="me" href="https://fedi.gremlin.work/@arch">
        <link rel="sitemap" href="/sitemap-index.xml" />
        <HeaderMeta />
    </head>
    <body class="bg-primary">
        <NavHeader />
        <IndexIntro />
        <BlogList
            title="Recent Posts"
            count={recentPostsCount}
            showMore={true}
        />
        <IndexBadges />
    </body>
</html>
