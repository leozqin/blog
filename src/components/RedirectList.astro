---
import { getCollection } from "astro:content";

const goLinks = await getCollection("go");
---

<section
    class="text-primary mx-auto w-7/8 lg:w-1/2 xl:w-1/3 leading-8 px-4 my-2 text-left"
>
    <h1 class="text-3xl my-2 text-center">Link Dump</h1>
    <ul>
        {
            goLinks
                .sort((a, b) => a.id.localeCompare(b.id))
                .map((go) => (
                    <li class="mx-1 my-2 leading-snug list-disc">
                        <a
                            class="text-secondary underline decoration-dashed underline-offset-4 hover:text-tertiary"
                            href={go.data.target}
                        >
                            {go.id} - {go.data.description}
                        </a>
                    </li>
                ))
        }
    </ul>
</section>
