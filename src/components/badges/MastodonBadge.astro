---
import { Icon } from "astro-icon/components";
---

<div class="mx-auto">
    <button class="badge">
        <a
            class="badge-text flex flex-row gap-2 place-items-center grow-0"
            href="https://fedi.gremlin.work/@arch"
            ><Icon name="mastodon" />Fediverse</a
        >
    </button>
</div>

<style>
    .badge {
        min-width: 120px;
        max-width: 120px;
        min-height: 20px;
        max-height: 20px;
        border-style: solid;
        border-color: #563ACC;
        border-radius: 4px;
        color: white;
        border-width: 0.25px;
        background-color: #17063B;
        display: inline-flex;
        justify-content: center;
    }

    .badge-text {
        font-family: monospace;
        text-align: center;
        vertical-align: middle;
        margin: 0 auto;
    }
</style>
