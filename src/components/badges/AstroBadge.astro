---
import { Icon } from "astro-icon/components";
---

<div class="mx-auto">
    <button class="badge">
        <a
            class="badge-text flex flex-row gap-2 place-items-center grow-0"
            href="https://astro.build"
            ><Icon name="astro" />Astro.js</a
        >
    </button>
</div>

<style>
    .badge {
        min-width: 88px;
        max-width: 88px;
        min-height: 31px;
        max-height: 31px;
        border-style: solid;
        border-color: #ee40f0;
        border-radius: 4px;
        color: #ee40f0;
        border-width: 0.25px;
        background-color: black;
        display: inline-flex;
        justify-content: center;
    }

    .badge-text {
        font-family: monospace;
        text-align: center;
        vertical-align: middle;
        margin: 0 auto;
    }
</style>
