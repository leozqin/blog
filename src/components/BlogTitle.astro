---
import TagBadge from './TagBadge.astro';

interface Props {
    title: String;
    date: Date;
    wordCount: Number;
    readTime: String;
    tags?: String[]
}

const { title, date, wordCount, readTime, tags=[] } = Astro.props;
const dateDay = date.toISOString().split('T')[0];
---

<header class="mx-auto w-6/7 lg:w-2/3 xl:w-1/3 text-center my-4">
    <h1 class="text-4xl my-2">{title}</h1>
    <h2 class="text-xl">
        <time datetime={dateDay}>{date.toDateString()}</time>
    </h2>
    <h2 class="text-xl">{wordCount} words, {readTime}</h2>
    <div class="flex justify-center">
        {
            tags.map((tag) => (
                <TagBadge label={tag} />
            ))
        }
    </div>
    
</header>
