---
interface Props {
    label: String
    link: URL
}

const {label, link} = Astro.props
---
<button class="my-2 px-2 py-1 mx-auto">
    <a href={new URL(link, Astro.site)}>{label}</a>
</button>

<style>
    button {
        background-color: #3d59a1;
        color: #b4f9f8;
        border-radius: 6px;
    }

    button:hover {
        background-color: #c3e88d;
        color: #ff007c;
        border-radius: 6px;
    }
</style>